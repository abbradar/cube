name:                cube
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             BSD3
author:              abbradar, Tensus
maintainer:          ab@fmap.me
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable triangle
  main-is:             Main.hs
  other-modules:       Text.Parser.Comments
                     , Data.Wavefront
                     , Engine.Mesh
                     , Engine.Camera
                     , Engine.Framerate
                     , Engine.Types
                     , Game.Types
  default-extensions:  OverloadedStrings
                     , ScopedTypeVariables
                     , TemplateHaskell
                     , QuasiQuotes
                     , RecordWildCards
                     , StandaloneDeriving
                     , DeriveGeneric
                     , KindSignatures
                     , DataKinds
                     , GeneralizedNewtypeDeriving
                     , RankNTypes
  build-depends:       base >=4.7
                     , text
                     , bytestring
                     , sdl2
                     , caramia
                     , linear
                     , lens
                     , data-default
                     , vector
                     , transformers
                     , containers
                     , interpolatedstring-perl6
                     , scientific
                     , trifecta
                     , parsers
  hs-source-dirs:      src
  ghc-options:         -Wall -threaded
  default-language:    Haskell2010
